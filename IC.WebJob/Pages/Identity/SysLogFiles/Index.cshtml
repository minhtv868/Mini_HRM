@page
@model IC.WebJob.Pages.Identity.SysLogFiles.IndexModel
@await Component.InvokeAsync("FunctionFavorite")
<div class="card mt-2">
    <div class="card-body p-0">
        @Html.AntiForgeryToken()
        <div class="table-responsive scrollbar">
            <table id="sticky-table" class="main-table table table-striped table-hover mb-0">
                <thead class="text-black">
                    <tr>
                        <th class="pt-1 pb-1" colspan="3">
                            <div class="row flex-between-center">
                                <div class="col-auto col-sm-auto d-flex align-items-center pe-0">
                                    <h6 class="mb-0 text-nowrap total-rows fw-semi-bold">Tìm thấy <span class="text-danger">@(Model.Files != null && Model.Files.Any() ? Model.Files.Count().NumberFormat() : "0")</span> bản ghi</h6>
                                </div>
                                <div class="col-auto text-end ps-0 justify-content-end">
                                </div>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th class="align-middle text-nowrap">File</th>
                        <th class="align-middle text-nowrap">Kích thước</th>
                        <th class="align-middle text-nowrap text-center">Thời gian</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Files != null && Model.Files.Any())
                    {
                        @foreach (var item in Model.Files)
                        {
                            <tr class="align-middle">
                                <td class="text-nowrap">
                                    <span class="mb-0 fw-semi-bold">
                                        @if (item.Length < 10000000)
                                        {
                                            <a asp-page="./Detail" asp-route-filePath="@item.FullName" asp-route-fileName="@item.Name" title="Chi tiết">@item.Name</a>
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.Name)
                                        }
                                    </span>
                                </td>
                                <td class="align-middle text-nowrap">
                                    <span class="mb-0 fw-semi-bold">
                                        @Html.Raw((item.Length/1024).ToString("N0")) KB
                                        </span>
                                </td>
                                <td class="align-middle white-space-nowrap text-end pe-3">
                                    <small class="mb-0" title="Thời gian tạo">
                                        <i class="fas fa-plus-square text-500 fa-sm"></i> @item.CreationTime.ToStringFormat()
                                    </small>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="align-middle text-warning fs--1 not-found text-center">
                            <td colspan="3">Chưa có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
