@page
@model IC.WebJob.Pages.WebJobs.Jobs.EditModel

@{
    Layout = null;
}

<form method="post"
      data-ajax="true"
      data-ajax-url="@Url.Page(pageName: "Edit")"
      data-ajax-method="post"
      data-ajax-begin="onBegin(this)"
      data-ajax-success="onSuccessed(this, xhr)">
    <div class="modal-header">
        <h5 class="modal-title">Sửa job</h5>
        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Đóng"></button>
    </div>
    <div class="modal-body mt-0">
        <div class="row gx-2">
            <div class="col-sm-12 mb-3 did-floating-label-content view-maxlength">
                <input asp-for="Command.JobName" asp-placeholder-for="Command.JobName" class="form-control to-slug did-floating-input" maxlength="255" />
                <label-required asp-for="Command.JobName" class="did-floating-label"></label-required>
                <span asp-validation-for="Command.JobName" class="text-danger"></span>
            </div>
            <div class="col-sm-12 mb-3 did-floating-label-content view-maxlength">
                <input asp-for="Command.JobClassName" asp-placeholder-for="Command.JobClassName" class="form-control to-slug did-floating-input" maxlength="255" />
                <label-required asp-for="Command.JobClassName" class="did-floating-label"></label-required>
                <span asp-validation-for="Command.JobClassName" class="text-danger"></span>
            </div>
            <div class="col-sm-12 mb-3 did-floating-label-content view-maxlength">
                <input asp-for="Command.JobClassType" asp-placeholder-for="Command.JobClassType" class="form-control to-slug did-floating-input" maxlength="255" />
                <label-required asp-for="Command.JobClassType" class="did-floating-label"></label-required>
                <span asp-validation-for="Command.JobClassType" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Command.Id" />
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Đóng</button>
        <button class="btn btn-primary" type="submit">Lưu</button>
    </div>
</form>