@page
@using WebJob.Helpers
@model IndexModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h5>@ViewData["Title"]</h5>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="modal-body mt-0">
        <div class="gx-2">
            <div class="col-8">
                <div class="mb-3 btn-reveal-trigger">
                    <div class="position-relative mb-4 text-center">
                        <div class="avatar avatar-5xl shadow-sm img-thumbnail rounded-circle">
                            <div class="h-100 w-100 rounded-circle overflow-hidden position-relative">
                                <img id="selectImgView_AvatarUserProfile" src="@(string.IsNullOrWhiteSpace(Model.Input.AvatarPath) ? "/img/avatar.png" : Model.Input.AvatarPath)" alt="Ảnh đại diện" onclick="viewImageGlightbox(this)" data-dz-thumbnail="data-dz-thumbnail" />
                                <a href="javascript:void(0)" onclick="showPopupSelectImg('_AvatarUserProfile')" class="mb-0 overlay-icon d-flex flex-center">
                                    <span class="bg-holder overlay overlay-0"></span>
                                    <span class="z-1 text-white dark__text-white text-center fs--1">
                                        <span class="fas fa-camera"></span>
                                        <span class="d-block">Chọn ảnh</span>
                                    </span>
                                </a>
                                <input id="selectImgInput_AvatarUserProfile" type="hidden" asp-for="Input.AvatarPath" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-8 mb-3 did-floating-label-content">
                <input asp-for="Username" asp-placeholder-for="Input.Username" class="form-control did-floating-input" disabled />
                <label asp-for="Username" class="did-floating-label"></label>
            </div>
            <div class="col-sm-8 mb-3 did-floating-label-content">
                <input asp-for="Input.FullName" asp-placeholder-for="Input.FullName" class="form-control did-floating-input" />
                <label asp-for="Input.FullName" class="did-floating-label"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="col-sm-8 mb-3 did-floating-label-content">
                <input asp-for="Input.PhoneNumber" asp-placeholder-for="Input.PhoneNumber" class="form-control did-floating-input" />
                <label asp-for="Input.PhoneNumber" class="did-floating-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-sm-8 mb-3 did-floating-label-content">
                <input asp-for="Input.Email" asp-placeholder-for="Input.Email" class="form-control did-floating-input" />
                <label asp-for="Input.Email" class="did-floating-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-sm-8 mb-3 did-floating-label-content">
                <input asp-for="Input.BirthDay" asp-placeholder-for="Input.BirthDay" class="form-control did-floating-input datepicker" />
                <label asp-for="Input.BirthDay" class="did-floating-label"></label>
                <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
            </div>
            <div class="col-sm-8 mb-3 did-floating-label-content">
                <input asp-for="Input.Address" asp-placeholder-for="Input.Address" class="form-control did-floating-input" />
                <label asp-for="Input.Address" class="did-floating-label"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            @*<div class="col-sm-8 mb-3 did-floating-label-content">
                <input asp-for="Input.OrganId" placeholder="Đơn vị" class="form-control did-floating-input" />
                <label asp-for="Input.OrganId" class="did-floating-label">Đơn vị</label>
                <span asp-validation-for="Input.OrganId" class="text-danger"></span>
            </div>
            <div class="col-sm-8 mb-3 did-floating-label-content">
                <input asp-for="Input.DefaultActionId" placeholder="DefaultActionId" class="form-control did-floating-input" />
                <label asp-for="Input.DefaultActionId" class="did-floating-label">DefaultActionId</label>
                <span asp-validation-for="Input.DefaultActionId" class="text-danger"></span>
            </div>*@
            <div class="col-sm-8 mb-3 did-floating-label-content">
                <textarea asp-for="Input.Notes" asp-placeholder-for="Input.Notes" class="form-control did-floating-input"></textarea>
                <label asp-for="Input.Notes" class="did-floating-label"></label>
                <span asp-validation-for="Input.Notes" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="">
        <button id="update-profile-button" class="btn btn-primary" type="submit">Lưu</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        flatpickrInit()
    </script>
}
