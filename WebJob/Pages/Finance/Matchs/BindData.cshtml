@using Web.Application.Features.Finance.Matchs.DTOs

@model Tuple<PaginatedResult<MatchGetPageDto>, PagingInput>
@{
    Layout = null;
}
<table id="sticky-table" class="main-table table table-striped table-hover mb-0">
    <thead class="text-black">
        <tr>
            <th class="pt-1 pb-1 no-border" colspan="8">
                <div class="row flex-between-center">
                    <div class="col-auto col-sm-auto d-flex align-items-center pe-0">
                        <h6 class="mb-0 text-nowrap total-rows fw-semi-bold ps-1">Tìm thấy <span class="text-danger">@((Model == null || Model.Item1.TotalCount <= 0) ? "0" : Model.Item1.TotalCount.NumberFormat())</span> bản ghi</h6>
                    </div>
                    <div class="col-auto text-end ps-0 justify-content-end">
                        <div class="d-flex align-items-center" id="table-replace-element">
                            <div class="bulk-select-actions d-none">
                                <form method="post"
                                      data-ajax="true"
                                      data-ajax-url="@Url.Page(pageName: "Index", pageHandler: "BulkActions")"
                                      data-ajax-method="post"
                                      data-ajax-begin="onBegin(this)"
                                      data-ajax-success="onSuccessed(this, xhr, true)">
                                    <div class="d-flex">
                                        <button name="Query.Status" value="1" class="btn btn-sm btn-falcon-default rounded-pill m-button-hover-info ms-2" type="submit">
                                            <i class="fas fa-eye"></i>
                                            <span class="d-none d-sm-inline-block ms-1">Hiển thị</span>
                                        </button>
                                        <button name="Query.Status" value="2" class="btn btn-sm btn-falcon-default rounded-pill m-button-hover-warning ms-2" type="submit">
                                            <i class="fas fa-eye-slash"></i>
                                            <span class="d-none d-md-inline-block ms-1">Ẩn</span>
                                        </button>
                                        <button onclick="return confirm('Xác nhận xóa mẫu tin đã chọn !')" class="btn btn-sm btn-falcon-default rounded-pill m-button-hover-warning ms-2" type="submit">
                                            <i class="far fa-trash-alt text-danger"></i>
                                            <span class="d-none d-md-inline-block ms-1">Xóa</span>
                                        </button>
                                        <input class="ChkActionIds" type="hidden" name="ChkActionIds" />
                                    </div>
                                </form>
                            </div>
                            <div class="bulk-select-replace-element d-flex align-items-center">
                                <button class="btn btn-primary no-focus ms-2" type="button"
                                        data-modal="modal-xl"
                                        onclick="return modalGet(this, '@Url.Page(pageName: "Create") ', 'Thêm mẫu tin')"
                                        title="Thêm mẫu tin">
                                    <i class="fas fa-plus"></i>
                                    <span class="d-none d-sm-inline-block ms-1">Thêm</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </th>
        </tr>
        <tr>
            
            <th class="px-1 text-center">ID</th>
            <th class="align-middle text-nowrap text-center">Thời gian</th>
            <th class="align-middle text-nowrap text-center">Giải đấu</th>
            <th class="align-middle text-nowrap text-center">Chủ nhà</th>
            <th class="align-middle text-nowrap text-center">Tỉ số</th>
            <th class="align-middle text-nowrap text-center">Đội khách</th>
            <th class="align-middle col-sm-1 text-center ">Thời gian</th>
            <th class="align-middle col-sm-1 text-center ">Thao tác</th>
            <th class="fs-0 text-nowrap pe-3 custom-table-th">
                <div class="form-check mb-0">
                    <input class="form-check-input" type="checkbox" />
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Item1.Data != null && Model.Item1.Data.Any())
        {
            int stt = (Model.Item1.CurrentPage - 1) * Model.Item1.PageSize;
            @foreach (var item in Model.Item1.Data)
            {
                stt++;
                <tr id="@item.MatchId" class="align-middle">
                    <td style=" text-align:center">@item.MatchId</td>
                    <td  >
                        <span class="mb-0 fw-semi-bold text-wrap">@item.EstimateStartTime.ToStringFormat("dd/MM/yyyy HH:mm")</span>
                    </td>
                    <td class="text-nowrap" >
                        <span class="mb-0  text-wrap">@item.LeagueName</span>
                    </td>
                    <td class="text-nowrap">
                        <span class="mb-0 text-wrap">@item.HomeName</span>
                    </td>
                    <td>
                        <span class="mb-0 fw-semi-bold text-wrap">@item.HomeGoals - @item.AwayGoals</span>
                    </td>
                    <td class="text-nowrap">
                        <span class="mb-0 text-wrap">@item.AwayName</span>
                    </td>
                    <td class="align-middle text-nowrap text-center">
                        <small class="mb-0 fs--1" title="Người tạo">
                            <i class="fas fa-user-plus text-500 fa-sm"></i> <span class="mb-0" title="Người tạo">@item.AuditableInfo.CreatedByUserName</span>
                        </small><br />
                        <small class="mb-0 fs--1 " title="Thời gian tạo: @item.CrDateTime.ToStringFormat()">
                            <span class="mb-0">@item.CrDateTime.ToStringFormat("dd/MM/yyyy HH:mm")</span>
                        </small> <br />
                       
                        @if(item.UpdDateTime != null)
                        {
                            <small class="mb-0 fs--1" title="Người cập nhật">
                                <i class="fas fa-user-plus text-500 fa-sm"></i> <span class="mb-0" title="Người cập nhật">@item.AuditableInfo.UpdatedByUserName</span>
                            </small>
                
                            <br />
                             <small class="mb-0 fs--1 " title="Thời gian cập nhật: @item.UpdDateTime.ToStringFormat()">
                            <span class="mb-0">@item.UpdDateTime.ToStringFormat("dd/MM/yyyy HH:mm")</span>
                        </small> <br />
                        }
                       
                       
                    </td>
                   
                    <td class="align-middle white-space-nowrap text-center pe-3">
                        <button class="btn btn-link p-0 ms-1" type="button"
                                data-modal="modal-xl"
                                onclick="return modalGet(this, '@Url.Page(pageName:"Edit", values: new { id = item.MatchId })', 'Cập nhật mẫu tin')"
                                title="Cập nhật mẫu tin">
                            <i class="far fa-edit"></i>
                        </button>
                        <a href="javascript:void(0)" class="btn btn-link p-0 ms-1"
                           data-ajax="true"
                           data-ajax-url="@Url.Page(pageName: "Index", pageHandler: "Delete", values: new { id = item.MatchId })"
                           data-ajax-method="post"
                           data-ajax-begin="setRequestHeader(this, xhr)"
                           data-ajax-success="onSuccessed(this, xhr, false, true)"
                           data-ajax-confirm="Xác nhận xóa mẫu tin đã chọn"
                           title="Xóa mẫu tin">
                            <i class="far fa-trash-alt text-danger"></i>
                        </a>
                    </td>
                    <td class="align-middle py-3 text-nowrap w-10">
                        <div class="form-check mb-0">
                            <input class="form-check-input row-checkbox" type="checkbox" name="ChkActionIds" value="@item.MatchId" />
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr class="align-middle text-warning fs--1 not-found text-center">
                <td colspan="8">Chưa có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_PaginationPartial", Model.Item2)