@page
@model WebJob.Pages.Finance.Departments.EditModel
@{
    Layout = null;
}
<form method="post"
      data-ajax="true"
      data-ajax-url="@Url.Page(pageName: "Edit")"
      data-ajax-method="post"
      data-ajax-begin="onBegin(this)"
      data-ajax-success="onSuccessed(this, xhr, false, true)">
    <div class="modal-header">
        <h5 class="modal-title">Cập nhật phòng ban</h5>
        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Đóng"></button>
    </div>
    <div class="modal-body mt-0">
        <div class="row gx-2">
            <input type="hidden" asp-for="Command.DepartmentId" />
            <div class="col-12 mb-3 did-floating-label-content view-maxlength">
                <input asp-for="Command.DepartmentName" asp-placeholder-for="Command.DepartmentName" class="form-control did-floating-input" maxlength="200" />
                <label-required asp-for="Command.DepartmentName" class="did-floating-label"></label-required>
                <span asp-validation-for="Command.DepartmentName" class="text-danger"></span>
            </div>
            <div class="col-12 mb-3 did-floating-label-content view-maxlength">
                <input asp-for="Command.DepartmentDesc" asp-placeholder-for="Command.DepartmentDesc" class="form-control did-floating-input" maxlength="200" />
                <label asp-for="Command.DepartmentDesc" class="did-floating-label"></label>
                <span asp-validation-for="Command.DepartmentDesc" class="text-danger"></span>
            </div>
          

        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Đóng</button>
        <button class="btn btn-primary" type="submit">Lưu</button>
    </div>
</form>

