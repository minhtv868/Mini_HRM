{
  "ConnectionStrings": {
    "HangfireConnection": "Server =.\\SQLEXPRESS; Database =MHDEV; Trusted_Connection = True;TrustServerCertificate=True",
    "IdentityConnection": "Server =.\\SQLEXPRESS; Database =MH_Identity; Trusted_Connection = True;TrustServerCertificate=True",
    "BongDa24hLogsConnection": "Server =.\\SQLEXPRESS; Database =MHDEV; Trusted_Connection = True;TrustServerCertificate=True",
    "BongDa24hCrawlsConnection": "Server =.\\SQLEXPRESS; Database =MHDEV; Trusted_Connection = True;TrustServerCertificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.DataProtection": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "UseMapToId": true,
    "RequireAuth2Fa": false,
    "RequireChangePassFirstTime": false,
    "IpWhiteList": "localhost",
    "TwoFactorAuthenticatorAppTitle": "BongDa24h CMS",
    "CacheTimeExpireInMinute": 30,
    "SlidingExpiration": 2,
    "PageSize": 30,
    "TIME_CACHE_VIEW": 120,
    "CacheSysMenu": false,
    "https": null,
    "NoImage": "no_image.gif",
    "FileExtentionAllow": "jpeg,jpg,png,gif,mp4",
    "UploadRootDir": "",
    "UploadDir": "Uploads",
    "IsMutiDB": true,
    "UsingUploadApi": true,
    //HangfireServer
    "HangfireQueues": "default",
    "HangfireServerName": ""
    //End HangfireServer
  },
  "MediatorSettings": {
    "UsingPerformanceBehaviourPipeline": false,
    "TimePerformanceWarningInMilliseconds": 1500
  },
  "DataProtection": {
    "Schema": "dbo",
    "TableName": "DataProtectionKeys",
    "ApplicationName": "BongDa24h",
    "DefaultKeyLifetimeDays": "15",
    "EncryptionAlgorithm": "AES_256_CBC",
    "ValidationAlgorithm": "HMACSHA256",
    "NewKeyLifetimeDays": "15",
    "AutoGenerateKeys": "true"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {SourceContext} {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs-.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {SourceContext} {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "BongDa24h CMS - Test"
    }
  }
}