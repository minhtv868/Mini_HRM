{
  "ConnectionStrings": {
    "HangfireConnection": "Server =.\\SQLEXPRESS; Database =MHDEV; Trusted_Connection = True;TrustServerCertificate=True",
    "FinanceConnection": "Server =.\\SQLEXPRESS; Database =Finances; Trusted_Connection = True;TrustServerCertificate=True"

  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.DataProtection": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "UseMapToId": true,
    "RequireAuth2Fa": false,
    "RequireChangePassFirstTime": false,
    "IpWhiteList": "localhost",
    "TwoFactorAuthenticatorAppTitle": "BongDa24h CMS",
    "CacheTimeExpireInMinute": 30,
    "SlidingExpiration": 2,
    "PageSize": 30,
    "TIME_CACHE_VIEW": 120,
    "CacheSysMenu": false,
    "https": null,
    "NoImage": "no_image.gif",
    "FileExtentionAllow": "jpeg,jpg,png,gif,mp4",
    "UploadRootDir": "",
    "UploadDir": "Uploads",
    "IsMutiDB": true,
    "UsingUploadApi": true,
    //HangfireServer
    "HangfireQueues": "default",
    "HangfireServerName": "",
    //End HangfireServer
    "LIVESCORE_MATCH_URL_TEMP": "https://prod-public-api.livescore.com/v1/api/app/scoreboard/soccer/[MatchId]",
    "COMMENTARY_URL": "https://prod-cdn-commentary-api.livescore.com/v1/api/app/event/[MatchId]/comments",
    "LINEUPS_URL": "https://prod-public-api.livescore.com/v1/api/app/lineups/soccer/[MatchId]",
    "INCIDENTS_URL": "https://prod-public-api.livescore.com/v1/api/app/incidents/soccer/[MatchId]",
    "STATISTICS_URL": "https://prod-public-api.livescore.com/v1/api/app/statistics/soccer/[MatchId]",
    "INFO_URL": "https://prod-public-api.livescore.com/v1/api/app/info/soccer/[MatchId]"
  },
  "MediatorSettings": {
    "UsingPerformanceBehaviourPipeline": false,
    "TimePerformanceWarningInMilliseconds": 1500
  },
  "DataProtection": {
    "Schema": "dbo",
    "TableName": "DataProtectionKeys",
    "ApplicationName": "",
    "DefaultKeyLifetimeDays": "15",
    "EncryptionAlgorithm": "AES_256_CBC",
    "ValidationAlgorithm": "HMACSHA256",
    "NewKeyLifetimeDays": "15",
    "AutoGenerateKeys": "true"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {SourceContext} {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs-.txt",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {SourceContext} {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server =.\\SQLEXPRESS; Database =Finances; Trusted_Connection = True;TrustServerCertificate=True",
          "sinkOptionsSection": {
            "tableName": "SysLogs",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 1000,
            "period": "0.00:00:30"
          },
          "columnOptionsSection": {
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "SourceContext",
                "DataType": "varchar",
                "DataLength": 255
              },
              {
                "ColumnName": "Application",
                "DataType": "varchar",
                "DataLength": 50
              }
            ]
          },
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "BongDa24h CMS - Test"
    }
  }
}